{# Utilisation du fichier Base #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Réinitialisation du mot de passe{% endblock %}

{# Conteneur de la page #}
{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center text-uppercase my-5 pb-lg-5">Réinitialisation du mot de passe</h1>
        </div>


        <div class="row">
            <div class="col-12 col-md-8 col-lg-7 col-xl-6 col-xxl-5 mx-auto">

                {{ form_start(passForm) }}
                    {{ form_row(passForm.plainPassword) }}
                    <button type="submit" class="btn btn-secondary col-12 mt-3 mb-5 mx-auto">Envoyer</button>
                {{ form_end(passForm) }}
            </div>
        </div>

    </div>

{% endblock %}
