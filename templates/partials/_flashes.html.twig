{# Affichage des messages flash "success" ou "error" #}
{% if app.session.flashBag.has('success') or app.session.flashBag.has('error') %}

    <div class="container">
        <div class="row">

            {# Message flash de succ√®s #}
            {% for message in app.flashes('success') %}

                <div class="alert alert-success text-center col-12 col-md-8 col-lg-7 col-xl-6 col-xxl-5 mx-auto" role="alert">
                    {{ message }}

                </div>

            {% endfor %}

            {# Message flash d'erreur #}
            {% for message in app.flashes('error') %}

                <div class="alert alert-danger text-center col-12 col-md-8 col-lg-7 col-xl-6 col-xxl-5 mx-auto" role="alert">
                    {{ message }}

                </div>

            {% endfor %}

        </div>
    </div>

{% endif %}