{# Utilisation du fichier Base #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}{{ publication.title }}{% endblock %}

{# Conteneur de la page #}
{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        <div class="row">
            <h2 class="col-12 text-center text-uppercase my-5">{{ publication.title }}</h2>
        </div>

        <div class="row">
            <a class="text-decoration-none text-white" href="{{ path('publication_list') }}">Retour vers la liste des publications</a>
        </div>

        <div class="row">

            <div class="col-12">

                <div class="card">

                    <div class="card-body">

                        {# Date et auteur de la publication #}
                        <div class="card-body">
                            <footer class="blockquote-footer my-2">Publié le <strong>{{ publication. publicationDate|format_datetime(locale='fr', pattern="EEEE dd MMMM YYYY à HH'h'mm") }}</strong> par <strong>{{ publication.author.pseudonym }}</strong></footer>
                        </div>

                        {# Contenu de la publication #}
                        <div class="mb-2">
                            {{ publication.content|purify }}
                        </div>

                </div>

            </div>

        </div>

    </div>

{% endblock %}
