{#  Utilisation du fichier Base #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Erreur 404{% endblock %}

{# block laissé vide pour ne pas faire apparaître de navbar lors du message d'erreur #}
{% block navbar %}{% endblock  %}

{#  Conteneur de la page #}
{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        {# Affichage de l'image d'erreur 404 #}
        <div class="row  my-3">

            <div>
                <p class="h1 text-center my-5 text-uppercase">Erreur 404, page introuvable</p>
            </div>

            <div class="col-12 text-center">
                <img src="{{ asset('images/error_404.jpg') }}" alt="Erreur 404, page introuvable" class=" img-fluid col-6">
            </div>
            <a class="text-decoration-none text-dark text-center my-4" href="{{ path('main_home') }}"><i class="fa-solid fa-arrow-rotate-left me-1"></i>Retour à l'accueil</a>
            <div>

            </div>

        </div>

    </div>

{% endblock %}
